html, body {
  width: 100%;
  height: 100%;
}

.main_content {
  position: absolute;
  z-index: 2; 
  width: 400px; 
  height: 100%; 
  background: rgba(0,0,0,0.9);
  margin: 0 auto;
  left: 0;
  right: 0;
  box-shadow: 0 0 40px rgba(0,0,0,0.5);

  .cs_logo {
    text-align: center;
    padding-top: 2rem;

    & > svg {
      width: 175px;  
      height: 175px;
    }
    
  }

  h2 {
    text-align: center;
    font-size: 2.2rem;
    color: #e0511f;
  }
}

.back_splash {
  position: absolute;
  z-index: 1;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-image: image-url('takeout_s.jpg');
}





@media screen and (min-width: 1024px) {
  .main_content {
    right: 15%;
    left: auto;
    margin: 0;
  }
  .back_splash {
  background-image: image-url('takeout_l.jpg');
  }
}

